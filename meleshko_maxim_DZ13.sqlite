CREATE TABLE departments (
    ID INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    NAME VARCHAR(30)
             );
CREATE TABLE Employee (
    ID INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    NAME VARCHAR(30),
    DEPARTMENT_ID INT ,
    ROLE VARCHAR(20),
    MANAGER_ID INT,
    FOREIGN KEY (DEPARTMENT_ID) REFERENCES departments(id)
    );
